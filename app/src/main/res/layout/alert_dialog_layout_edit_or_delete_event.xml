<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/textViewTitleAlertDialogEditOrDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/color2"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTitleEventEditOrDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLength="150"
        android:shadowColor="@color/color2"
        android:textColor="@color/color2"
        android:textColorHighlight="@color/color4"
        android:textColorHint="@color/color3"
        android:textCursorDrawable="@color/color1"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextDescriptionEditOrDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLength="150"
        android:shadowColor="@color/color2"
        android:textColor="@color/color2"
        android:textColorHighlight="@color/color4"
        android:textColorHint="@color/color3"
        android:textCursorDrawable="@color/color1"
        android:textSize="18sp" />

</LinearLayout>